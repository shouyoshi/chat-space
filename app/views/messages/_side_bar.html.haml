.side-main
  .side-head
    %p.user-name
      = current_user.name
    .icon
      = link_to new_group_path do
        %i.far.fa-edit
      = link_to edit_user_path(current_user.id) do
        %i.fa.fa-cog
  .side-body
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group.id) do
          .Group-name
            = group.name 
          .Group-message  
            = group.show_last_message